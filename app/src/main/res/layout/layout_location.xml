<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/location_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_idCaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/txt_locId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/textView_idCaps"
                android:text="31"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView_latCaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAT.:"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_below="@id/textView_idCaps"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/txt_locLatt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.7311"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:layout_toRightOf="@id/textView_latCaps"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txt_locId"/>

            <TextView
                android:id="@+id/textView_longCaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LONG.:"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_below="@id/textView_latCaps"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/txt_locLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="75.8893"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_toRightOf="@id/textView_longCaps"
                android:layout_below="@id/txt_locLatt"
                android:layout_marginTop="10dp"
                android:layout_marginStart="9dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>